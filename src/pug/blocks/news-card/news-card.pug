mixin news-card(text)
  a.news-card.h-740px.rounded-20px.border-greyBorder.border-1px.p-24px.relative.flex.shrink-0.flex-col.gap-10(
    class='d:h-351px d:w-253px gap-3 d:rounded-2xl d:p-2'
  )(
    href='#'
  )&attributes(attributes)
    .news-card__image.relative.flex.shrink-0.flex-col.gap-6.overflow-hidden.rounded-xl(
      class='d:leading-120 d:rounded-xl'
    )
      +picture('fancy_img1.jpg').block.h-full.w-full
      .news-card__date.leading-140.absolute.left-5.top-5.z-10.rounded-xl.px-3.py-1.text-white.backdrop-blur-md(
        class='d:py-2px d:leading-120 d:left-2 d:top-2 d:rounded-lg d:px-2 d:text-xs'
      ) 18 октября 2023
      .news-card__chapter.leading-140.absolute.bottom-5.left-5.z-10.rounded-xl.bg-black.px-3.py-1.text-white(
        class='d:py-2px d:leading-120 d:bottom-2 d:left-2 d:rounded-lg d:px-2 d:text-xs'
      ) Новости
    .news-card__info.flex.h-full.flex-col.justify-between.gap-2.px-10(class='d:px-2')
      .news-card__title.text-32px.line-clamp-4.font-semibold(
        class='d:leading-120 d:line-clamp-3 d:text-base'
      )!= text
      .news-card__hashtags.flex.flex-wrap.items-center.gap-2(class='d:w-36 d:gap-y-0')
        +hashtag('#выставки',true)
        +hashtag('#новости',true)
        +hashtag('#события',true)
        +hashtag('#пресс-центр',true)
    .news-card__icon.absolute.bottom-5.right-5.h-11.w-11.rotate-180(
      class='d:bottom-2 d:right-2 d:h-8 d:w-8'
    )
      +back-small-button-devices-icon
